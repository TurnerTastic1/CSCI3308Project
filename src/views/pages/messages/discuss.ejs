<%- include ('../../partials/head') %>
  <%- include ('../../partials/menu') %>
    <div class="col"><%- include ('../../partials/message') %></div>

    <main>
        <div class="container">
            <div class="row">
                <div class="col-sm-1">
                    <a href="/message/messages" title="Back to messages">
                        <img src="/images/messenger.png" alt="Profile_image" style="padding: 10px; width: 100px;">
                    </a>
                </div>
                <div class="col">     
                  <h3 style="padding: 10px; padding-top: 35px;">Welcome <%- user.username %></h3>
                </div>
              </div>
              <centre>
                <div class="col-md-10"> 
                    <div class="card w-200">
                      <div class="card-body">  
                        <% if (messages[0].sender_id == user.user_id) {
                            var receiver = messages[0].receiver_data.username;
                        } else {
                            var receiver = messages[0].sender_data.username;
                        } %>
                        <h5 class="card-title" style="display:inline">Messages from <%- receiver %></h5>
                        <ul class="list-group list-group-flush">
                            <% 
                                if (messages) {
                                    messages.forEach(function(message) { %>
                                        <li class="list-group-item"> <%- message.message %> </li>
                                <% }) } %>
                        </ul>
                        <div class="form-floating">
                            <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea" form="sendMessageForm"></textarea>
                            <label for="floatingTextarea">Message</label>
                        </div>
                        <form name="sendMessageForm">
                            <input type="hidden" id="message_data" name="message_data" value="peen">
                            <button type="submit" class="btn btn-outline-dark btn-sm" style="float: right;">
                                Send
                            </button>
                        </form>
                      </div>
                    </div>  
                  </div>
              </centre>
              
              
        </div>
    </main>