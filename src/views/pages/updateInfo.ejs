<%- include ('../partials/head') %>
<%- include ('../partials/menu') %>
<div class="col"><%- include ('../partials/message') %></div>

<main>
  <div class="container">
    <!-- THE REST OF YOUR HTML CODE GOES HERE -->
    <h1><centre>Update info</centre></h1>
    <form action="/user/updateInfo" method="POST">
      <div class="row mb-3">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Username</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="colFormLabel" name="username" placeholder="Current: <%- user.username %>">
        </div>
      </div>
      <div class="row mb-3">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Home Address</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="colFormLabel" name="home_address" placeholder="Current: <%- user.home_address %>">
        </div>
      </div>
      <div class="row mb-3">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Phone Number</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="colFormLabel" name="phone" placeholder="Current: <%- user.phone %>">
        </div>
      </div>
      <div class="mb-3 form-check">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>

  </div>
</main>

<%- include ('../partials/footer') %>